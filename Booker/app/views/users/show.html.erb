

<div class="container">
<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>


  <%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg" %>

  <table class="table">
    <tbody>
  <tr>
    <th>name</th>
    <th class="profile-name"><%= @user.name %></th>
  </tr>
  <tr>
   <th>introduction</th>
   <th><%= @user.introduction %></th>
   </tr>
    <tr>
     <th>follows</th>
     <th>
     <%= link_to @user.following.count,following_user_path(@user) %>

   </th>
   </tr>
   <tr>
     <th>followers</th>
     <th>
       <% @user ||= current_user %>
       <%= link_to @user.followers.count,followers_user_path(@user) %>

   </th>
   </tr>
</tbody>
</table>

<!--フォロー、フォロワー機能↓-->

<%= render 'follow_form', user: @user %>
<!--ここまで-->

 <% if  @user == current_user %>
  <%= link_to"", edit_user_path(current_user), class: "btn btn-default btn-block glyphicon glyphicon-wrench"  %>
  <% end %>

<h2>New book </h2>

<% if @book.errors.any? %>

  <div class="alert-warning">
    <div class="alert1">
    <p><%= pluralize(@book.errors.count, "error") %></p>
    </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


  <%= form_with model: @book,  local:true do |f| %>


  <div class="form-group">
      <%= f.label :title %></br>
      <%= f.text_field :title, class: 'form-control' %>


  </div>

<div class ="form-group">
    <%= f.label :opnion %></br>
    <%= f.text_area :body, class: 'form-control' %>
</div>
<div class ="form-group">
 <button type="submit" class="btn btn-primary btn-block">Create Book</button>
</div>
<% end %>
 </div>



<div class="col-xs-9">

<table class=table>

  <h2>Books</h2>
  <thead>

  <tr>
    <th></th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
  </thead>


  <tbody>
      <% @books.each do |book| %>
  <tr>

    <td>

    <%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg" %>

    </td>
    <td>

    <span><%= link_to book.title,book_path(book) %></span>
    </td>

    <td>
    <span><%= book.body %></span>
    </td>
    <td>
    <i class="fa fa-comment"></i>
    <a href="#comments">コメント数 :<%= @book.book_comments.count %></a>
    </td>

  </tr>
  <% end %>
  </tbody>
  </table>

  </div>
  </div>
  </div>

