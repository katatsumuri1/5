<% provide(:title, @title) %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg" %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th class="profile-name"><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th> <% @user ||= current_user %>
     <%= link_to @user.following.count,following_user_path(@user) %>
            </th>
          </tr>
         <tr>
            <th>followers</th>
            <th> <% @user ||= current_user %>
       <%= link_to @user.followers.count,followers_user_path(@user) %>
           </th>
         </tr>
        </tbody>
        </table>
        <%= render 'follow_form', user: @user %>
         <% if  @user == current_user %>
      <%= link_to"", edit_user_path(current_user), class: "btn btn-default btn-block glyphicon glyphicon-wrench"  %>
         <% end %>
      <h2>New book </h2>

      <% if @book.errors.any? %>
        <div class="alert-warning">
          <div class="alert1">
          <p><%= pluralize(@book.errors.count, "error") %></p>
          </div>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <%= form_with model: @book,  local:true do |f| %>
        <div class="form-group">
            <%= f.label :title %></br>
            <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class ="form-group">
            <%= f.label :opnion %></br>
            <%= f.text_area :body, class: 'form-control' %>
        </div>

        <div class ="form-group">
          <button type="submit" class="btn btn-primary btn-block">Create Book</button>
        </div>
      <% end %>
    </div>

    <div class="col-xs-9">
      <h1><%= @title %></h1>
      <table class=table>
        <thead>
          <tr>
            <th>image</th>
            <th>name<th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= user.name  %>
              </td>
              <td>
                <span><%= link_to "Show",user_path(user) %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>