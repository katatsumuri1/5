<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <title>Bookers</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>

  <header class="navbar  navbar-inverse">
  <div class="container">

    <nav class="nav navbar-nav navbar-left">
    <span>Bookers</span>
      </li>

    </nav>

    <nav>
      <ul class="nav navbar-nav navbar-right">
         <% if user_signed_in? %>

       <li class="">
       <%= link_to" Home", user_path(current_user), class: "glyphicon glyphicon-home"  %>
       </li>

       <li class="">
         <%= link_to" Users", users_path, class: "glyphicon glyphicon-user"  %>

       </li>

      <li class="">
        <%= link_to" Books", books_path, class: "glyphicon glyphicon-book" %>
       </li>

      <li class="">
        <%= link_to" logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out"%>
      </li>

      </ul>
    </nav>

    <div id="slidemenu">
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">


    <% else %>

      <li class="">
        <%= link_to ' Home', root_path, class: "glyphicon glyphicon-home"%>
       </li>

       <li class="">
        <%= link_to ' About', home_about_path, class: "glyphicon glyphicon-link" %>
       </li>

      <li class="">
        <%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
      </li>
      <li class="">
        <%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
      </li>
    <% end %>
  </ul>
</div>

  </header>
</div>

   <% flash.each do |message_type, message| %>
    <%= message %>
    <% end %>
    
    <!--↓検索機能-->
    
    <div class= "container">
      <div class= "row">
        <div class="col-xs-6 col-xs-offset-3">
          <% if user_signed_in? %>
       <%= form_with url:search_path, method: :get, data: {remote: false},html: {class:"form-inline"} do |f| %>
           
           <div class="form-group">
           <%= f.text_field :word %>
           </div>
           
           <div class="form-group">
           <%= f.select :range, {'User': '1', 'Book': '2'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
           </div>
           
           <div class="form-group">
             <%= f.select :search, {"前方一致": "forward_match", "後方一致": "backward_match", "部分一致":"partial_match","完全一致": "perfect_match" }, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
           </div>
           <div class="form-group">
           <button type="submit" class="btn btn-primary btn-block">検索</button>
           </div>
          <% end %>
         <% end %>
       
      </div>
    </div>
    </div>
<!--終了-->

   <%= yield %>
  <footer>
    <div class= "container">
      <div class= "row">
        <div class= "col-xs-3 col-xs-offset-9">
      <p>CoppyRight Infratop.inc</p>
      </div>
      </div>
      </div>
  </footer>

  </body>
</html>
